<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="700.0" prefWidth="1200.0"
            styleClass="game-background"
            stylesheets="@/galaxy-truckers.css"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="it.polimi.ingsw.is25am33.client.view.gui.viewControllers.CardPhaseController">

    <!-- Header superiore con titolo del gioco e messaggi -->
    <top>
        <VBox styleClass="top-container">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>

            <!-- Riga con titolo e crediti cosmici -->
            <HBox alignment="CENTER_LEFT" spacing="20.0">
                <Label styleClass="screen-title" text="Galaxy Truckers" />

                <!-- Spacer per spingere i crediti a sinistra -->
                <Region HBox.hgrow="ALWAYS" />

                <!-- Box crediti cosmici -->
                <VBox styleClass="cosmic-credits-container" alignment="CENTER">
                    <Label styleClass="cosmic-credits-label" text="Crediti Cosmici" />
                    <HBox alignment="CENTER" spacing="5.0">
                        <ImageView fitHeight="24.0" fitWidth="24.0" preserveRatio="true">
                            <!-- Qui puoi aggiungere un'icona per i crediti se disponibile -->
                            <!-- <image><Image url="@/gui/graphics/icons/cosmic-credit-icon.png" /></image> -->
                        </ImageView>
                        <Label fx:id="cosmicCreditsLabel" styleClass="cosmic-credits-value" text="0" />
                    </HBox>
                </VBox>
            </HBox>

            <StackPane>
                <Label fx:id="messageLabel" styleClass="timer-label" />
            </StackPane>

        </VBox>
    </top>

    <center>
        <!-- Layout principale con board a sinistra e carta al centro-destra -->
        <HBox spacing="20.0">
            <padding>
                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0" />
            </padding>

            <!-- Container principale delle board (sinistra) -->
            <StackPane fx:id="centerStackPane" HBox.hgrow="ALWAYS">
                <!-- Le board vengono caricate dinamicamente qui -->
            </StackPane>

            <!-- Container per la carta (centro-destra) -->
            <VBox styleClass="card-display-section" alignment="CENTER" spacing="15.0" minWidth="320.0" maxWidth="400.0">
                <VBox.margin>
                    <Insets top="20.0" right="20.0" bottom="20.0" />
                </VBox.margin>

                <!-- Container carta con bordo bianco -->
                <StackPane styleClass="card-display-frame" VBox.vgrow="ALWAYS">
                    <ImageView fx:id="cardImageView"
                               fitWidth="400.0"
                               fitHeight="470.0"
                               preserveRatio="true"
                               styleClass="card-image-large" />
                </StackPane>
            </VBox>
        </HBox>
    </center>

    <bottom>
        <HBox fx:id="bottomHBox" alignment="CENTER" spacing="15.0" styleClass="action-bar">
            <!-- dynamic buttons to make choices through card states -->
        </HBox>
    </bottom>

</BorderPane>