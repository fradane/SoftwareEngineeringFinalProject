<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="700.0" prefWidth="1200.0"
            styleClass="game-background"
            stylesheets="@/galaxy-truckers.css"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="it.polimi.ingsw.is25am33.client.view.gui.viewControllers.CardPhaseController">

    <!-- Header superiore con titolo del gioco e messaggi -->
    <top>
        <VBox styleClass="top-container">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>

            <Label styleClass="screen-title" text="Galaxy Truckers" />

            <StackPane>
                <Label fx:id="messageLabel" styleClass="timer-label" />
            </StackPane>

        </VBox>
    </top>

    <center>
        <StackPane fx:id="centerStackPane">

        </StackPane>
    </center>

    <!-- Pannello destro per l'immagine -->
    <right>
        <!-- Container per l'immagine della carta -->
        <StackPane styleClass="card-image-container" StackPane.alignment="CENTER" VBox.vgrow="ALWAYS">
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
            <ImageView fx:id="cardImageView" fitWidth="200.0" preserveRatio="true" styleClass="card-image" />
        </StackPane>
    </right>

    <bottom>
        <HBox fx:id="bottomHBox" alignment="CENTER" spacing="15.0" styleClass="action-bar">
            <!-- dynamic buttons to make choices through card states -->
        </HBox>
    </bottom>

</BorderPane>
