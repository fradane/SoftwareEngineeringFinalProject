<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="700.0" prefWidth="1200.0"
        styleClass="game-background"
            stylesheets="@/galaxy-truckers.css"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="it.polimi.ingsw.is25am33.client.view.gui.viewControllers.CardPhaseController">

    <!-- Top header with game title and messages -->
    <top>
        <VBox styleClass="top-container">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>

            <!-- Row with title and cosmic credits -->
            <HBox alignment="CENTER_LEFT" spacing="20.0">
                <!-- Left section with title and buttons -->
                <VBox spacing="10.0" alignment="TOP_LEFT">
                    <Label styleClass="screen-title" text="Galaxy Truckers" />

                    <!-- Side-by-side game control buttons -->
                    <HBox spacing="10.0" alignment="CENTER_LEFT">
                        <Button fx:id="exitGameButton"
                                text="Exit Game"
                                styleClass="control-button, exit-button"
                                onAction="#handleExitGame"
                                minWidth="90.0"
                                maxWidth="90.0" />
                        <Button fx:id="landButton"
                                text="Land"
                                styleClass="control-button, land-button"
                                onAction="#handleLand"
                                minWidth="90.0"
                                maxWidth="90.0" />
                    </HBox>
                </VBox>

                <!-- Spacer to push credits to the right -->
                <Region HBox.hgrow="ALWAYS" />

                <!-- Cosmic credits box -->
                <VBox styleClass="cosmic-credits-container" alignment="CENTER">
                    <Label styleClass="cosmic-credits-label" text="Crediti Cosmici" />
                    <HBox alignment="CENTER" spacing="5.0">
                        <ImageView fitHeight="24.0" fitWidth="24.0" preserveRatio="true">
                            <!-- You can add a credit icon here if available -->
                            <!-- <image><Image url="@/gui/graphics/icons/cosmic-credit-icon.png" /></image> -->
                        </ImageView>
                        <Label fx:id="cosmicCreditsLabel" styleClass="cosmic-credits-value" text="0" />
                    </HBox>
                </VBox>
            </HBox>

            <StackPane>
                <Label fx:id="messageLabel" styleClass="timer-label" />
            </StackPane>

        </VBox>
    </top>

    <center>
        <!-- Main layout with board on the left and card at the center-right -->
        <HBox spacing="20.0">
            <padding>
                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0" />
            </padding>

            <!-- Main container for boards (left) -->
            <StackPane fx:id="centerStackPane" HBox.hgrow="ALWAYS">
                <!-- Boards are dynamically loaded here -->
            </StackPane>

            <!-- Container for the card (center-right) -->
            <VBox styleClass="card-display-section" alignment="CENTER" spacing="15.0" minWidth="320.0" maxWidth="400.0">
                <VBox.margin>
                    <Insets top="20.0" right="20.0" bottom="20.0" />
                </VBox.margin>

                <!-- Card container with white border -->
                <StackPane styleClass="card-display-frame" VBox.vgrow="ALWAYS">
                    <ImageView fx:id="cardImageView"
                               fitWidth="400.0"
                               fitHeight="470.0"
                               preserveRatio="true"
                               styleClass="card-image-large" />
                </StackPane>
            </VBox>
        </HBox>
    </center>

    <bottom>
        <BorderPane styleClass="action-bar">
            <!-- Main container for dynamic buttons at the center -->
            <center>
                <HBox fx:id="bottomHBox" alignment="CENTER" spacing="15.0">
                    <!-- dynamic buttons to make choices through card states -->
                </HBox>
            </center>

            <!-- Skip Last Card button at the bottom-right -->
            <right>
                <Button fx:id="skipToLastCardButton"
                        text="Skip Last Card"
                        styleClass="control-button, skip-card-button"
                        onAction="#handleSkipToLastCart"
                        visible="true">
                    <BorderPane.margin>
                        <Insets right="15.0" />
                    </BorderPane.margin>
                </Button>
            </right>
        </BorderPane>
    </bottom>

</BorderPane>