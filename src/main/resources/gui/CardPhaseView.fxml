<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            styleClass="game-background"
            stylesheets="@/galaxy-truckers.css"
            prefHeight="700.0" prefWidth="1200.0"
            fx:controller="it.polimi.ingsw.is25am33.client.view.gui.viewControllers.CardPhaseController">

    <!-- Header superiore con titolo del gioco e messaggi -->
    <top>
        <VBox styleClass="top-container">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>

            <Label text="Galaxy Truckers" styleClass="screen-title" />

            <StackPane>
                <Label fx:id="messageLabel" text="Benvenuto in Galaxy Truckers!"
                       style="-fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 5px 0 0 0;" />
            </StackPane>

        </VBox>
    </top>

    <center>
        <StackPane fx:id="centerStackPane">

        </StackPane>
    </center>

    <!-- Pannello destro per l'immagine -->
    <right>
        <VBox spacing="10.0" prefWidth="200.0">
            <padding>
                <Insets bottom="20.0" left="10.0" right="20.0" top="20.0" />
            </padding>

            <StackPane>
                <ImageView fx:id="componentImageView" fitWidth="150.0" fitHeight="150.0" preserveRatio="true"
                           styleClass="component-image"/>
            </StackPane>

        </VBox>
    </right>

</BorderPane>