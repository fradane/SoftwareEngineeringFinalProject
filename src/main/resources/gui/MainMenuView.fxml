<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.Integer?>
<?import javafx.collections.FXCollections?>

<AnchorPane prefHeight="600" prefWidth="600" style="-fx-background-color: #1c1c1c;"
            xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/17.0.12"
            fx:controller="it.polimi.ingsw.is25am33.client.view.gui.viewControllers.MainMenuViewController">

    <StackPane prefHeight="600" prefWidth="600" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0">

        <!-- Main Menu -->
        <VBox fx:id="mainMenu" alignment="CENTER" spacing="20" visible="true" managed="true">
            <Label style="-fx-text-fill: white; -fx-font-size: 28px;" text="Main Menu" />
            <Button fx:id="createGameButton" onAction="#handleCreateGame" prefWidth="200" text="Create Game" />
            <Button fx:id="joinGameButton" onAction="#handleChooseGameForm" prefWidth="200" text="Join Game" />
            <Button fx:id="exitButton" onAction="#handleExit" prefWidth="200" text="Exit" />
        </VBox>

        <!-- Create Game Form -->
        <VBox fx:id="createGameForm" alignment="CENTER" spacing="10" visible="false" managed="false">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <Label style="-fx-text-fill: white; -fx-font-size: 18px;" text="Create Game" />
            <Label style="-fx-text-fill: white;" text="Number of Players (2-4)" />
            <ComboBox fx:id="playerCountComboBox" prefWidth="200">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <Integer fx:value="2"/>
                        <Integer fx:value="3"/>
                        <Integer fx:value="4"/>
                    </FXCollections>
                </items>
            </ComboBox>
            <CheckBox fx:id="easyModeCheckBox" style="-fx-text-fill: white;" text="Easy Mode" />
            <Label style="-fx-text-fill: white;" text="Choose Your Color" />
            <ComboBox fx:id="colorComboBox" prefWidth="200" />
            <Button fx:id="submitCreateGameButton" onAction="#handleSubmitCreateGame" prefWidth="100" text="Create" />
        </VBox>

        <!-- Choose Game Form -->
        <VBox fx:id="chooseGameForm" alignment="CENTER" spacing="10" visible="false" managed="false">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <ListView fx:id="gameListView" prefWidth="300" prefHeight="400"/>
            <Button fx:id="chooseGameButton" onAction="#handleChooseGame" prefWidth="100" text="Next" />
        </VBox>


        <!-- Join Game Form -->
        <VBox fx:id="joinGameForm" alignment="CENTER" spacing="10" visible="false" managed="false">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <Label style="-fx-text-fill: white; -fx-font-size: 18px;" text="Join Game" />
            <Label style="-fx-text-fill: white;" text="Choose a Color to join" />
            <ListView fx:id="colorListView" prefWidth="300" prefHeight="400"/>
            <Button fx:id="submitJoinGameButton" onAction="#handleSubmitJoinGame" prefWidth="100" text="Join" />
        </VBox>

        <!-- Game Created Screen -->
        <VBox fx:id="gameCreatedScreen" alignment="CENTER" spacing="20" visible="false" managed="false">
            <Label style="-fx-text-fill: white; -fx-font-size: 20px;" text="You’re in! Waiting for others to start the adventure!" />
        </VBox>

        <!-- Join Other Players Screen -->
        <VBox fx:id="joinOtherPlayersScreen" alignment="CENTER" spacing="20" visible="false" managed="false">
            <Label style="-fx-text-fill: white; -fx-font-size: 20px;" text="You’re in! Waiting for others to start the adventure!" />
        </VBox>

    </StackPane>
</AnchorPane>