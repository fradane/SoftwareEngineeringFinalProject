<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!--
Rimuovo le dimensioni fisse (prefHeight/prefWidth) e uso AnchorPane con ancoraggi
per fare in modo che il layout si adatti automaticamente alla dimensione della finestra
-->
<AnchorPane styleClass="main-menu-background"
            stylesheets="@/galaxy-truckers.css"
            xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/17.0.12"
            fx:controller="it.polimi.ingsw.is25am33.client.view.gui.viewControllers.MainMenuViewController">

    <!-- StackPane che occupa tutta l'area disponibile -->
    <StackPane AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
               AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0">

        <!-- Main Menu -->
        <VBox fx:id="mainMenu" alignment="CENTER" spacing="25" visible="true" managed="true"
              styleClass="menu-container">
            <padding>
                <Insets top="50" right="40" bottom="50" left="40" />
            </padding>

            <!-- Titolo Main Menu -->
            <VBox alignment="CENTER" spacing="-8">
                <Label styleClass="menu-title" text="GALAXY" />
                <Label styleClass="menu-title" text="TRUCKERS" />
            </VBox>

            <Label styleClass="menu-subtitle" text="Choose your adventure" />

            <!-- Label per errori - SEMPRE PRESENTE nel main menu, inizialmente nascosta -->
            <Label fx:id="errorLabel" styleClass="error-label" visible="false" managed="false" wrapText="true"
                   maxWidth="500.0" alignment="CENTER" />

            <!-- Bottoni principali -->
            <VBox alignment="CENTER" spacing="15">
                <Button fx:id="createGameButton" onAction="#handleCreateGame"
                        styleClass="menu-button-primary" text="CREATE GAME" />
                <Button fx:id="joinGameButton" onAction="#handleChooseGameForm"
                        styleClass="menu-button-primary" text="JOIN GAME" />
                <Button fx:id="exitButton" onAction="#handleExit"
                        styleClass="menu-button-secondary" text="EXIT" />
            </VBox>
        </VBox>

        <!-- Create Game Form -->
        <VBox fx:id="createGameForm" alignment="CENTER" spacing="20" visible="false" managed="false"
              styleClass="form-container">
            <padding>
                <Insets top="30" right="30" bottom="30" left="30" />
            </padding>

            <Label styleClass="form-title" text="CREATE GAME" />

            <!-- Label errori specifica per questo form -->
            <Label fx:id="createGameErrorLabel"
                   styleClass="error-label"
                   visible="false"
                   managed="false"
                   wrapText="true"
                   maxWidth="400.0"
                   alignment="CENTER" />

            <VBox alignment="CENTER" spacing="15" styleClass="form-content">
                <!-- Number of Players -->
                <VBox alignment="CENTER" spacing="8">
                    <Label styleClass="form-label" text="Number of Players" />
                    <ComboBox fx:id="playerCountComboBox" styleClass="space-combo-box" />
                </VBox>

                <!-- Easy Mode -->
                <CheckBox fx:id="easyModeCheckBox" styleClass="space-checkbox" text="Easy Mode" />

                <!-- Color Selection -->
                <VBox alignment="CENTER" spacing="8">
                    <Label styleClass="form-label" text="Choose Your Color" />
                    <ComboBox fx:id="colorComboBox" styleClass="space-combo-box" />
                </VBox>

                <!-- Action Buttons -->
                <HBox alignment="CENTER" spacing="15">
                    <Button fx:id="submitCreateGameButton" onAction="#handleSubmitCreateGame"
                            styleClass="form-button-primary" text="CREATE" />
                    <Button onAction="#backToMainMenu"
                            styleClass="form-button-secondary" text="BACK" />
                </HBox>
            </VBox>
        </VBox>

        <!-- Choose Game Form -->
        <VBox fx:id="chooseGameForm" alignment="CENTER" spacing="20" visible="false" managed="false"
              styleClass="form-container">
            <padding>
                <Insets top="30" right="30" bottom="30" left="30" />
            </padding>

            <Label styleClass="form-title" text="AVAILABLE GAMES" />

            <!-- Label errori specifica per questo form -->
            <Label fx:id="chooseGameErrorLabel"
                   styleClass="error-label"
                   visible="false"
                   managed="false"
                   wrapText="true"
                   maxWidth="400.0"
                   alignment="CENTER" />

            <!-- ListView con dimensioni responsive -->
            <ListView fx:id="gameListView" styleClass="space-list-view"
                      prefWidth="500" prefHeight="300"
                      maxWidth="600" maxHeight="400" />

            <HBox alignment="CENTER" spacing="15">
                <Button fx:id="chooseGameButton" onAction="#handleChooseGame"
                        styleClass="form-button-primary" text="NEXT" />
                <Button onAction="#backToMainMenu"
                        styleClass="form-button-secondary" text="BACK" />
            </HBox>
        </VBox>

        <!-- Join Game Form -->
        <VBox fx:id="joinGameForm" alignment="CENTER" spacing="20" visible="false" managed="false"
              styleClass="form-container">
            <padding>
                <Insets top="30" right="30" bottom="30" left="30" />
            </padding>

            <Label styleClass="form-title" text="JOIN GAME" />
            <Label styleClass="form-subtitle" text="Choose your pilot color" />

            <!-- Label errori specifica per questo form -->
            <Label fx:id="joinGameErrorLabel"
                   styleClass="error-label"
                   visible="false"
                   managed="false"
                   wrapText="true"
                   maxWidth="400.0"
                   alignment="CENTER" />

            <!-- ListView con dimensioni responsive -->
            <ListView fx:id="colorListView" styleClass="space-list-view"
                      prefWidth="350" prefHeight="250"
                      maxWidth="400" maxHeight="300" />

            <HBox alignment="CENTER" spacing="15">
                <Button fx:id="submitJoinGameButton" onAction="#handleSubmitJoinGame"
                        styleClass="form-button-primary" text="JOIN" />
                <Button onAction="#backToChooseGame"
                        styleClass="form-button-secondary" text="BACK" />
            </HBox>
        </VBox>

        <!-- Game Created Screen -->
        <VBox fx:id="gameCreatedScreen" alignment="CENTER" spacing="25" visible="false" managed="false"
              styleClass="waiting-container">
            <padding>
                <Insets top="50" right="40" bottom="50" left="40" />
            </padding>

            <Label styleClass="waiting-title" text="MISSION CREATED!" />
            <Label styleClass="waiting-message" text="Waiting for brave pilots to join the adventure..." />

            <!-- Progress indicator opzionale -->
            <ProgressIndicator styleClass="space-progress" />
        </VBox>

        <!-- Join Other Players Screen -->
        <VBox fx:id="joinOtherPlayersScreen" alignment="CENTER" spacing="25" visible="false" managed="false"
              styleClass="waiting-container">
            <padding>
                <Insets top="50" right="40" bottom="50" left="40" />
            </padding>

            <Label styleClass="waiting-title" text="MISSION JOINED!" />
            <Label styleClass="waiting-message" text="Waiting for the commander to start the adventure..." />

            <!-- Progress indicator opzionale -->
            <ProgressIndicator styleClass="space-progress" />

        </VBox>

    </StackPane>
</AnchorPane>